<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent_black"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="366dp"
        android:paddingBottom="1dp">

        <com.welove.welove520.albumrecyclverviewheader.album.PinchImageView
            android:id="@+id/iv_album_edit_preview"
            android:layout_width="match_parent"
            android:layout_height="364dp"
            android:scaleType="centerCrop"
            android:src="@drawable/anni_bg_large_2" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_album_edit_preview"
            android:layout_alignTop="@+id/iv_album_edit_preview"
            android:alpha="0.7"
            android:background="#10000000"
            android:scaleType="fitXY"
            android:src="@drawable/bg_pick_photo_shadow" />

        <ImageView
            android:id="@+id/iv_full_screen_preview"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="16dp"
            android:src="@drawable/ic_fullscreen" />
    </RelativeLayout>
</RelativeLayout>